{
  "dashboard": {
    "title": "WeatherInsight - Pipeline Overview",
    "uid": "weatherinsight-pipeline",
    "version": 1,
    "timezone": "utc",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-7d",
      "to": "now"
    },
    "refresh": "30s",
    "tags": ["weatherinsight", "pipeline", "airflow"],
    "panels": [
      {
        "id": 1,
        "title": "Pipeline Status Overview",
        "type": "stat",
        "gridPos": { "x": 0, "y": 0, "w": 24, "h": 4 },
        "targets": [
          {
            "expr": "up{job=\"weatherinsight-api\"}",
            "legendFormat": "API Status",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "orientation": "horizontal"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "type": "value", "value": "0", "text": "DOWN", "color": "red" },
              { "type": "value", "value": "1", "text": "UP", "color": "green" }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 1, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Quarterly Pipeline Execution Rate",
        "type": "graph",
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(weatherinsight_api_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "reqps", "label": "Requests/sec" },
          { "format": "short" }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "pointradius": 2,
        "legend": {
          "show": true,
          "values": true,
          "min": true,
          "max": true,
          "current": true,
          "total": false,
          "avg": true
        }
      },
      {
        "id": 3,
        "title": "Pipeline Task Duration Distribution",
        "type": "heatmap",
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(weatherinsight_api_request_duration_seconds_bucket[5m])",
            "legendFormat": "{{le}}",
            "format": "heatmap",
            "refId": "A"
          }
        ],
        "color": {
          "mode": "spectrum",
          "cardColor": "#b4ff00",
          "colorScheme": "interpolateSpectral",
          "exponent": 0.5,
          "min": 0,
          "max": null
        },
        "dataFormat": "tsbuckets",
        "yAxis": {
          "format": "s",
          "decimals": 2,
          "logBase": 1,
          "label": "Duration"
        }
      },
      {
        "id": 4,
        "title": "Ingestion Tasks - Average Duration",
        "type": "stat",
        "gridPos": { "x": 0, "y": 12, "w": 8, "h": 4 },
        "targets": [
          {
            "expr": "avg(rate(weatherinsight_api_request_duration_seconds_sum{endpoint=~\".*features.*\"}[5m]) / rate(weatherinsight_api_request_duration_seconds_count{endpoint=~\".*features.*\"}[5m]))",
            "legendFormat": "Avg Duration",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 2, "color": "yellow" },
                { "value": 5, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Processing Tasks - Average Duration",
        "type": "stat",
        "gridPos": { "x": 8, "y": 12, "w": 8, "h": 4 },
        "targets": [
          {
            "expr": "avg(weatherinsight_api_db_query_duration_seconds{operation=\"select\"})",
            "legendFormat": "DB Query Time",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 3,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 0.5, "color": "yellow" },
                { "value": 2, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Aggregation Tasks - Average Duration",
        "type": "stat",
        "gridPos": { "x": 16, "y": 12, "w": 8, "h": 4 },
        "targets": [
          {
            "expr": "sum(rate(weatherinsight_api_requests_total[5m]))",
            "legendFormat": "Total Request Rate",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 10, "color": "yellow" },
                { "value": 50, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Task Failure Rate",
        "type": "graph",
        "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(weatherinsight_api_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "{{endpoint}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "reqps", "label": "Errors/sec" },
          { "format": "short" }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [0.1],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "60s",
          "handler": 1,
          "name": "High Error Rate",
          "noDataState": "no_data",
          "notifications": []
        },
        "lines": true,
        "fill": 2,
        "linewidth": 2
      },
      {
        "id": 8,
        "title": "Success Rate by Pipeline Stage",
        "type": "bargauge",
        "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum by(endpoint) (rate(weatherinsight_api_requests_total{status=~\"2..\"}[5m])) / sum by(endpoint) (rate(weatherinsight_api_requests_total[5m])) * 100",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ],
        "options": {
          "displayMode": "gradient",
          "orientation": "horizontal",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 95, "color": "yellow" },
                { "value": 99, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Pipeline Execution Timeline",
        "type": "graph",
        "gridPos": { "x": 0, "y": 24, "w": 24, "h": 8 },
        "targets": [
          {
            "expr": "weatherinsight_api_request_duration_seconds{quantile=\"0.5\"}",
            "legendFormat": "P50 - {{endpoint}}",
            "refId": "A"
          },
          {
            "expr": "weatherinsight_api_request_duration_seconds{quantile=\"0.95\"}",
            "legendFormat": "P95 - {{endpoint}}",
            "refId": "B"
          },
          {
            "expr": "weatherinsight_api_request_duration_seconds{quantile=\"0.99\"}",
            "legendFormat": "P99 - {{endpoint}}",
            "refId": "C"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration" },
          { "format": "short" }
        ],
        "lines": true,
        "fill": 0,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "alignAsTable": true,
          "current": true,
          "avg": true,
          "max": true
        }
      },
      {
        "id": 10,
        "title": "Active Pipeline Runs",
        "type": "stat",
        "gridPos": { "x": 0, "y": 32, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(up{job=~\"weatherinsight.*\"})",
            "legendFormat": "Active Services",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 1, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 11,
        "title": "Recent Pipeline Completions",
        "type": "stat",
        "gridPos": { "x": 6, "y": 32, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(increase(weatherinsight_api_requests_total{status=~\"2..\"}[1h]))",
            "legendFormat": "Successful Requests",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "yellow" },
                { "value": 100, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "title": "Pipeline Resource Utilization",
        "type": "graph",
        "gridPos": { "x": 12, "y": 32, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=\"weatherinsight-api\"}[5m]) * 100",
            "legendFormat": "CPU Usage %",
            "refId": "A"
          },
          {
            "expr": "process_resident_memory_bytes{job=\"weatherinsight-api\"} / 1024 / 1024",
            "legendFormat": "Memory Usage MB",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "percent", "label": "CPU / Memory" },
          { "format": "short" }
        ],
        "seriesOverrides": [
          {
            "alias": "Memory Usage MB",
            "yaxis": 2
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2
      }
    ],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "text": "Prometheus",
            "value": "Prometheus"
          }
        },
        {
          "name": "job",
          "type": "query",
          "datasource": "$datasource",
          "query": "label_values(weatherinsight_api_requests_total, job)",
          "refresh": 1,
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "datasource": "$datasource",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\"}",
          "iconColor": "red",
          "name": "Active Alerts",
          "step": "60s",
          "tagKeys": "alertname",
          "titleFormat": "{{alertname}}",
          "type": "tags"
        }
      ]
    }
  },
  "overwrite": true
}
