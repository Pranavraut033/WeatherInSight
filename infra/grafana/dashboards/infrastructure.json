{
  "dashboard": {
    "title": "WeatherInsight - Infrastructure",
    "uid": "weatherinsight-infra",
    "version": 1,
    "timezone": "utc",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-3h",
      "to": "now"
    },
    "refresh": "30s",
    "tags": ["weatherinsight", "infrastructure", "monitoring"],
    "panels": [
      {
        "id": 1,
        "title": "Service Health Status",
        "type": "stat",
        "gridPos": { "x": 0, "y": 0, "w": 24, "h": 4 },
        "targets": [
          {
            "expr": "up{job=~\"weatherinsight.*|minio|prometheus|grafana\"}",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "orientation": "horizontal"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "type": "value", "value": "0", "text": "DOWN", "color": "red" },
              { "type": "value", "value": "1", "text": "UP", "color": "green" }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 1, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "MinIO - Bucket Sizes",
        "type": "graph",
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "minio_bucket_usage_total_bytes",
            "legendFormat": "{{bucket}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "bytes", "label": "Size" },
          { "format": "short" }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "alignAsTable": true,
          "current": true,
          "avg": true,
          "max": true
        }
      },
      {
        "id": 3,
        "title": "MinIO - Object Counts",
        "type": "graph",
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "minio_bucket_usage_object_total",
            "legendFormat": "{{bucket}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Objects" },
          { "format": "short" }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "alignAsTable": true,
          "current": true,
          "total": false
        }
      },
      {
        "id": 4,
        "title": "MinIO - Request Rate",
        "type": "graph",
        "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(minio_s3_requests_total[5m])",
            "legendFormat": "{{api}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "reqps", "label": "Requests/sec" },
          { "format": "short" }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "avg": true,
          "max": true
        }
      },
      {
        "id": 5,
        "title": "MinIO - Error Rate",
        "type": "graph",
        "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(minio_s3_requests_errors_total[5m])",
            "legendFormat": "{{api}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "reqps", "label": "Errors/sec" },
          { "format": "short" }
        ],
        "lines": true,
        "fill": 2,
        "linewidth": 2,
        "seriesOverrides": [
          {
            "alias": "/.*/",
            "color": "red"
          }
        ],
        "legend": {
          "show": true,
          "values": true,
          "total": true,
          "current": true
        }
      },
      {
        "id": 6,
        "title": "PostgreSQL - Active Connections",
        "type": "stat",
        "gridPos": { "x": 0, "y": 20, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname=\"weatherinsight\"}",
            "legendFormat": "Active",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 50, "color": "yellow" },
                { "value": 100, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "PostgreSQL - Query Duration (P95)",
        "type": "stat",
        "gridPos": { "x": 6, "y": 20, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(weatherinsight_api_db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "P95",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 3,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 0.5, "color": "yellow" },
                { "value": 2, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "PostgreSQL - Database Size",
        "type": "stat",
        "gridPos": { "x": 12, "y": 20, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "pg_database_size_bytes{datname=\"weatherinsight\"}",
            "legendFormat": "Size",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 10000000000, "color": "yellow" },
                { "value": 50000000000, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "PostgreSQL - Transaction Rate",
        "type": "stat",
        "gridPos": { "x": 18, "y": 20, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "rate(pg_stat_database_xact_commit{datname=\"weatherinsight\"}[5m])",
            "legendFormat": "Commits/sec",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "blue" },
                { "value": 10, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Container CPU Usage",
        "type": "graph",
        "gridPos": { "x": 0, "y": 24, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=\"weatherinsight-api\"}[5m]) * 100",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "percent", "label": "CPU %", "max": 100 },
          { "format": "short" }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [80],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "60s",
          "handler": 1,
          "name": "High CPU Usage (>80%)",
          "noDataState": "no_data",
          "notifications": []
        },
        "legend": {
          "show": true,
          "values": true,
          "alignAsTable": true,
          "current": true,
          "avg": true,
          "max": true
        }
      },
      {
        "id": 11,
        "title": "Container Memory Usage",
        "type": "graph",
        "gridPos": { "x": 12, "y": 24, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"weatherinsight-api\"} / 1024 / 1024",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "mbytes", "label": "Memory MB" },
          { "format": "short" }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "alignAsTable": true,
          "current": true,
          "avg": true,
          "max": true
        }
      },
      {
        "id": 12,
        "title": "Network I/O",
        "type": "graph",
        "gridPos": { "x": 0, "y": 32, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(minio_s3_traffic_sent_bytes[5m])",
            "legendFormat": "MinIO Sent",
            "refId": "A"
          },
          {
            "expr": "rate(minio_s3_traffic_received_bytes[5m])",
            "legendFormat": "MinIO Received",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "Bps", "label": "Bytes/sec" },
          { "format": "short" }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "alignAsTable": true,
          "current": true,
          "avg": true,
          "max": true
        }
      },
      {
        "id": 13,
        "title": "Disk Usage",
        "type": "gauge",
        "gridPos": { "x": 12, "y": 32, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "(sum(minio_cluster_disk_total_bytes) - sum(minio_cluster_disk_free_bytes)) / sum(minio_cluster_disk_total_bytes) * 100",
            "legendFormat": "MinIO Disk Usage",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 70, "color": "yellow" },
                { "value": 85, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 14,
        "title": "System Load Average",
        "type": "graph",
        "gridPos": { "x": 0, "y": 40, "w": 24, "h": 8 },
        "targets": [
          {
            "expr": "node_load1",
            "legendFormat": "Load 1m",
            "refId": "A"
          },
          {
            "expr": "node_load5",
            "legendFormat": "Load 5m",
            "refId": "B"
          },
          {
            "expr": "node_load15",
            "legendFormat": "Load 15m",
            "refId": "C"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Load" },
          { "format": "short" }
        ],
        "lines": true,
        "fill": 0,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "alignAsTable": true,
          "current": true,
          "avg": true,
          "max": true
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "text": "Prometheus",
            "value": "Prometheus"
          }
        },
        {
          "name": "service",
          "type": "query",
          "datasource": "$datasource",
          "query": "label_values(up, job)",
          "refresh": 1,
          "multi": true,
          "includeAll": true,
          "current": {
            "text": "All",
            "value": "$__all"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "datasource": "$datasource",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\"}",
          "iconColor": "red",
          "name": "All Alerts",
          "step": "60s",
          "titleFormat": "{{alertname}}",
          "type": "tags"
        }
      ]
    }
  },
  "overwrite": true
}
